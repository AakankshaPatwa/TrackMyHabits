<h1 class="text-2xl font-bold mb-6">Your Habits</h1>

<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  <% @habits.each do |habit| %>
    <%= render 'habits/habit_card', habit: habit %>
  <% end %>
</div>

<div class="mt-8">
  <%= link_to "Add New Habit", new_habit_path, class: "inline-block bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded" %>
</div>



