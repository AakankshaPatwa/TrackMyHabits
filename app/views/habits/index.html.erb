<h1 class="text-3xl font-bold mb-6">Your Habits</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @habits.each do |habit| %>
    <div id="habit_<%= habit.id %>" class="flex">
      <%= render 'habits/habit_card', habit: habit %>
    </div>
  <% end %>
</div>

<div class="mt-8 text-center">
  <%= link_to "Add New Habit",
              new_habit_path,
              class: "inline-block bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg" %>
</div>
