<h1 class="text-2xl font-bold mb-4">Add New Habit</h1>

<%= form_with(model: @habit, local: true) do |f| %>
  <div class="mb-4">
    <%= f.label :name, class: "block mb-1 font-semibold" %>
    <%= f.text_field :name, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, class: "block mb-1 font-semibold" %>
    <%= f.text_area :description, rows: 3, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <%= f.submit "Create Habit", class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
<% end %>
